{% import 'macros/breadcrumbs.html.twig' as breadcrumbs %}
{% extends "base.html.twig" %}
{% block title %}Compte | Modifier votre mot de passe{% endblock %}

{% block body %}
<section class="account container">
{{ breadcrumbs.render([
    {'url': url('home'), 'text': 'Home'},
    {'url': url('account'), 'text': 'Compte'},
    {'text': 'Modifier mon mot de passe'},
]) }}
<h1 class="h1">Modifier votre mot de passe</h1>
  {% if notification %}
  <div class="alert alert-info">{{ notification }}</div>
  {% endif %}
  {{ form_start(form,{'attr': {'class': 'form'}}) }}
    <div class="form_control">
    <div class="form_group">
      {{ form_label(form.firstname) }}
      {{ form_widget(form.firstname) }}
      {{ form_errors(form.firstname) }}
    </div>
    <div class="form_group">
      {{ form_label(form.lastname) }}
      {{ form_widget(form.lastname) }}
      {{ form_errors(form.lastname) }}
    </div>
  </div>
  <div class="form_control">
    <div class="form_group">
      {{ form_label(form.email) }}
      {{ form_widget(form.email) }}
      {{ form_errors(form.email) }}
    </div>
    <div class="form_group">
      {{ form_label(form.old_password) }}
      {{ form_widget(form.old_password) }}
      {{ form_errors(form.old_password) }}
    </div>
  </div>
  <div class="form_group">
    {{ form_label(form.new_password.first) }}
    {{ form_widget(form.new_password.first) }}
    {{ form_errors(form.new_password.first) }}
  </div>
  <div class="form_group last">
    {{ form_label(form.new_password.second) }}
    {{ form_widget(form.new_password.second) }}
    {{ form_errors(form.new_password.second) }}
  </div>
  <div class="form_group">
      {{ form_widget(form.submit) }}
  </div>
  {{ form_end(form) }}
</section>
{% endblock %}