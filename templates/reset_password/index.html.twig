{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
<section class="register container">
  <h2 class="h2">Mot de passe oublié</h2>
  {% if notification %}
    <div class="alert alert-info">{{ notification }}</div>
  {% endif %}
  <form method="post" class="form">
    <div class="form_group last">
      <label for="inputEmail">Email</label>
      <input type="email" name="email" id="inputEmail" required autofocus>
    </div>
    <div class="form_group">
      <button class="btn btn_white" type="submit">Valider</button>
    </div>
    <div class="form_group">
      <a class="links" href={{ path('app_login') }}>Vous connecter ?</a>
    </div>
  </form>
</section>
{% endblock %}
